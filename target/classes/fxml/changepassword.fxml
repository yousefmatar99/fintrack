<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<AnchorPane prefHeight="640.0" prefWidth="360.0" style="-fx-background-color: linear-gradient(to bottom, #4A90E2, #87CEEB);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fintrack.controllers.ChangePasswordController">
    <children>
        <!-- Header Section -->
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="360.0" spacing="10.0" style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1A73E8;" text="Change Password" />
        </HBox>

        <!-- Form Section -->
        <VBox alignment="CENTER" layoutX="20.0" layoutY="80.0" prefWidth="320.0" spacing="20.0" style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1A73E8;" text="Email:" />
                <TextField fx:id="emailField" promptText="Enter your email" style="-fx-background-color: #FFFFFF; -fx-border-color: #1A73E8; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5; -fx-font-size: 14px;" />
            </VBox>

            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1A73E8;" text="New Password:" />
                <PasswordField fx:id="passwordField" promptText="Enter new password" style="-fx-background-color: #FFFFFF; -fx-border-color: #1A73E8; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5; -fx-font-size: 14px;" />
            </VBox>

            <VBox alignment="CENTER_LEFT" spacing="5.0">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1A73E8;" text="Confirm Password:" />
                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter new password" style="-fx-background-color: #FFFFFF; -fx-border-color: #1A73E8; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 5; -fx-font-size: 14px;" />
            </VBox>

            <!-- Change Password Button -->
            <Button fx:id="changePasswordButton" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Change Password" onAction="#handleChangePassword" />
        </VBox>

        <!-- Back Button -->
        <Button fx:id="btnback" layoutX="146.0" layoutY="498.0" onAction="#handleBack" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Back">
            <graphic>
                <ImageView fitHeight="16.0" fitWidth="16.0">
                    <image>
                        <Image url="@../images/backicon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>    </children>
</AnchorPane>
